<div
  class="promo-banner"
  style="background: {{ section.settings.bg_color }}; color: {{ section.settings.text_color }};"
>
  <div class="promo-message">
    {{ section.settings.message }}
  </div>

  {% if section.settings.show_form %}
    <div class="signup-form">
      <h3>{{ section.settings.form_title }}</h3>
      <form action="#" method="post">
        <input type="text" name="username" placeholder="Username" required>
        <input type="email" name="email" placeholder="Email" required>
        <input type="password" name="password" placeholder="Password" required>
        <button type="submit">{{ section.settings.button_text }}</button>
      </form>
    </div>
  {% endif %}
</div>

{% schema %}
{
  "name": "Promo Banner + Signup",
  "settings": [
    {
      "type": "text",
      "id": "message",
      "label": "Promo Text",
      "default": "Limited-time offer! Sign up now."
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#FF6B6B"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#FFFFFF"
    },
    {
      "type": "checkbox",
      "id": "show_form",
      "label": "Show Signup Form?",
      "default": true
    },
    {
      "type": "text",
      "id": "form_title",
      "label": "Form Title",
      "default": "Create an Account"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Sign Up"
    }
  ]
}
{% endschema %}

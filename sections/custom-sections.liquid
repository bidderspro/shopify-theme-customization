<div class="custom-section" style="background-color: {{ section.settings.background_color }};">
  <h2>{{ section.settings.title }}</h2>

  {% for block in section.blocks %}
    <div class="custom-block" {{ block.shopify_attributes }}>
      <h3>{{ block.settings.heading }}</h3>
      <div>{{ block.settings.content }}</div>
    </div>
  {% endfor %}
</div>

<style>
  .custom-section {
    padding: 20px;
    margin: 20px 0;
  }
  .custom-block {
    margin: 15px 0;
    padding: 15px;
    border: 1px solid #eee;
  }
</style>

{% schema %}
{
  "name": "Custom Section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Welcome to our store"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#ffffff"
    }
  ],
  "blocks": [
    {
      "type": "text_block",
      "name": "Text Block",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Block Heading",
          "default": "Block Title"
        },
        {
          "type": "richtext",
          "id": "content",
          "label": "Content",
          "default": "<p>Add your content here</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Section",
      "category": "Custom"
    }
  ]
}
{% endschema %}

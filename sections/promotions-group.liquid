<h2 style="text-align: {{ section.settings.Title_alignment }}">{{ section.settings.Title }}</h2>
{% comment %} <h2>{{ section.settings.Title }}</h2> {% endcomment %}
{% if settings.promotion_name.size > 0 %}
  <p>Active Promotion:{{ settings.promotion_name }}</p>
{% endif %}
<div style="display:flex; justify-content:center gap:20px;">
  {% for block in section.blocks %}
    {% if block.type == 'promotion' %}
      <div style="display:flex; flex-direction:column; gap:10px">
        <h3 style="text-align:center">{{ block.settings.title }}</h3>
        {{ block.settings.image | image_url: width: 500 | image_tag }}
      </div>
    {% endif %}
  {% endfor %}
</div>
{% schema %}
{
  "name": "Promotions Group",
  "tag": "section",
  "class": "my-wrapper-class",
  "settings": [
    {
      "type": "text",
      "label": "Title",
      "id": "Title"
    },
    {
      "type": "select",
      "label": "Title Alignment",
      "id": "Title_alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "left"
    }
  ],
  "blocks": [
    {
      "type": "promotion",
      "name": "Promotion",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Promotions Group"
    }
  ]
}
{% endschema %}
